# VoltServers Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration (Required)
# Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://voltservers:your_secure_password@localhost:5432/voltservers

# Session Security (Required)
# Generate a long random string (at least 32 characters)
SESSION_SECRET=your_very_long_random_session_secret_at_least_32_characters

# WHMCS Integration (Optional)
# Required for billing and client portal functionality
WHMCS_API_IDENTIFIER=your_whmcs_api_identifier
WHMCS_API_SECRET=your_whmcs_api_secret
WHMCS_URL=https://your-whmcs-domain.com

# Email Services (Optional)
# Required for sending notification emails
SENDGRID_API_KEY=your_sendgrid_api_key

# Wisp Panel Integration (Optional)
# Required for game server management integration
WISP_API_URL=https://game.voltservers.com
WISP_API_KEY=your_wisp_api_key

# Additional Security (Production Recommended)
# Enable these for production security
# FORCE_HTTPS=true
# TRUST_PROXY=true