# VoltServers Environment Configuration
# Copy this file to .env and update with your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/voltservers

# ================================
# WHMCS INTEGRATION (Required)
# ================================
WHMCS_API_URL=https://yourdomain.com/billing
WHMCS_API_IDENTIFIER=your_whmcs_api_identifier
WHMCS_API_SECRET=your_whmcs_api_secret

# ================================
# WISP.GG INTEGRATION (Optional)
# ================================
WISP_API_URL=https://game.yourdomain.com
WISP_API_KEY=your_wisp_api_key

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=5000

# ================================
# SECURITY
# ================================
SESSION_SECRET=your_very_long_random_session_secret_here_change_this

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
SENDGRID_API_KEY=your_sendgrid_api_key
SUPPORT_EMAIL=support@yourdomain.com

# ================================
# PRODUCTION SETTINGS (Production Only)
# ================================
# CORS_ORIGIN=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ================================
# DEVELOPMENT SETTINGS (Development Only)
# ================================
# Enable detailed logging in development
# DEBUG=express:*